<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.webtech.homework.congress.fragments.FavoriteLegislators"
    android:background="@color/colorFavoritesBackground">

    <ListView
        android:id="@+id/favoriteLegislatorsList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="100%"
        app:layout_widthPercent="85%"
        tools:listitem="@layout/legislator_row" >

    </ListView>

    <LinearLayout
        android:id="@+id/favoriteLegislatorsIndex"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_toRightOf="@+id/favoriteLegislatorsList"
        android:background="@color/colorIndexBackground"
        android:orientation="vertical"
        app:layout_heightPercent="100%"
        app:layout_widthPercent="15%">

    </LinearLayout>

</android.support.percent.PercentRelativeLayout>
