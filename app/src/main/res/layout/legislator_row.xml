<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/legislatorRowLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorRowBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/legislatorImage"
            android:layout_width="50dp"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/legislatorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tom Cruise"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textColor="#000000" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/legislatorParty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Republican"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/legislatorState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="California"
                    android:textColor="#000000"
                    android:layout_marginLeft="1dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp"/>


                <TextView
                    android:id="@+id/legislatorDistrict"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="District 0"
                    android:textColor="#000000"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>




        </LinearLayout>

        <ImageView
            android:src="@drawable/ic_details_arrow"
            android:layout_width="20dp"
            android:layout_height="35dp"
            android:layout_marginLeft="-30dp"
            android:layout_gravity="center_vertical"/>


    </LinearLayout>

</LinearLayout>
